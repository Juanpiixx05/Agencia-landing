---
import '../styles/typography.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Agencia digital moderna" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!-- Preload de la primera imagen del hero -->
    <link rel="preload" href="/images/service1.jpg" as="image" importance="high">
  </head>
  <body class="font-sans text-gray-900 dark:text-white antialiased">
    <div id="root">
      <slot />
    </div>
    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js" async defer crossorigin="anonymous"></script>
  </body>
</html>

<!-- CHATBOT (versión optimizada) -->
<script>
window.addEventListener('DOMContentLoaded', () => {
  const loadLandbot = () => {
    const existingScript = document.querySelector('script[src="https://cdn.landbot.io/landbot-3/landbot-3.0.0.mjs"]');
    if (!existingScript) {
      const script = document.createElement('script');
      script.type = "module";
      script.src = 'https://cdn.landbot.io/landbot-3/landbot-3.0.0.mjs';
      script.onload = () => {
        new Landbot.Livechat({
          configUrl: 'https://storage.googleapis.com/landbot.online/v3/H-2757457-M3YAP6MX84JDE7WS/index.json',
        });
      };
      document.body.appendChild(script);
    }
  };

  const interactionEvents = ['mouseover', 'touchstart'];
  interactionEvents.forEach(event => {
    window.addEventListener(event, loadLandbot, { once: true, passive: true });
  });
});
</script>

<!-- ESTILOS GLOBALES ACTUALIZADOS -->
<style is:global>
  :root {
    --color-primary: #000000;
    --color-secondary: #ffffff;
    --color-hero-overlay: rgba(0, 0, 0, 0.3);
    --color-text: #333333;
    --color-text-light: #666666;
    --container-width: 1440px;
    --spacing-sm: 1rem;
    --spacing-md: 2rem;
    --spacing-lg: 4rem;
    --spacing-xl: 8rem;
    --transition-slow: 0.6s;
    --transition-normal: 0.3s;
    --transition-fast: 0.15s;
    --ease-out-expo: cubic-bezier(0.19, 1, 0.22, 1);
    --ease-in-out: cubic-bezier(0.4, 0, 0.2, 1);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    -webkit-tap-highlight-color: transparent;
  }

  html {
    font-family: 'Inter', sans-serif;
    scroll-behavior: smooth;
    background-color: var(--color-secondary);
  }

  body {
    overflow-x: hidden;
    color: var(--color-text);
    line-height: 1.6;
    isolation: isolate;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  #root {
    flex: 1;
    position: relative;
    z-index: 0;
  }

  img, .background-image {
    max-width: 100%;
    height: auto;
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
  }

  .container {
    max-width: var(--container-width);
    margin: 0 auto;
    padding: 0 var(--spacing-sm);
  }

  /* Ajustes clave para el hero */
  .hero {
    position: relative;
    z-index: 0;
  }

  .hero .background-container {
    z-index: -1;
  }

  /* Optimización de animaciones */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation-duration: 0.01ms !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
    }
  }

  /* Resto de estilos... (mantener los que ya tienes) */
</style>