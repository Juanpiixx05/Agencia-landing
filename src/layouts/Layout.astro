---
// Layout component for the entire application
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Estudio creativo digital especializado en diseÃ±o web y branding">
