---
// Page for displaying services offered by the company, using various components
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import ServiciosPage from '../components/ServiciosPage.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Servicios - EterCore">
  <!-- Navbar component for site navigation -->
  <Navbar />
  <main>
    <!-- ServiciosPage component displaying the services offered -->
    <ServiciosPage />
  </main>
  <!-- Footer component for additional links and copyright information -->
  <Footer />
</Layout>

<style>
  /* Styles for the main content area */
  main {
    width: 100%;
    overflow: hidden;
    padding-top: 80px; /* Adjust based on navbar height */
  }
</style>
