<header class="header">
  <!-- Navigation container -->
  <nav class="container">
    <!-- Logo section with a link to the homepage -->
    <div class="logo">
      <a href="/">EterCore</a>
    </div>
    <!-- Navigation links for different sections of the website -->
    <div class="nav-links">
      <a href="/#inicio">Inicio</a>
      <a href="/servicios">Servicios</a>
      <a href="/proyectos">Proyectos</a>
      <a href="/#contacto">Contacto</a>
    </div>
    <!-- Menu button for mobile view -->
    <button class="menu-button" aria-label="Menu">
      <span></span>
      <span></span>
    </button>
  </nav>
</header>

<style>
  /* Styles for the header */
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    background-color: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    padding: 1.5rem 0;
  }

  /* Navigation styles */
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  /* Logo styles */
  .logo a {
    font-weight: 700;
    font-size: 1.2rem;
    letter-spacing: -0.02em;
  }

  /* Navigation links styles */
  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-links a {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  /* Hover effect for navigation links */
  .nav-links a:hover {
    color: var(--color-primary);
  }

  /* Menu button styles */
  .menu-button {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  /* Menu button span styles */
  .menu-button span {
    display: block;
    width: 24px;
    height: 2px;
    background-color: var(--color-primary);
    transition: all 0.3s ease;
  }

  .menu-button span:first-child {
    margin-bottom: 6px;
  }

  /* Responsive styles for mobile view */
  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }

    .menu-button {
      display: block;
    }
  }
</style>

<script>
  // Selecting the menu button and navigation links
  const menuButton = document.querySelector('.menu-button');
  const navLinks = document.querySelector('.nav-links');

  // Adding click event listener to the menu button
  menuButton?.addEventListener('click', () => {
    // Toggle the visibility of navigation links and active state of the menu button
    navLinks?.classList.toggle('show');
    menuButton.classList.toggle('active');
  });
</script>